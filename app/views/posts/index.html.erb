<div class="posts sixteen columns">
  <% for post in @posts %>
    <div class="post row">
      <div class="post-title twelve columns alpha">
        <%= gated_link_to(post.title, post_path(post)) %>
      </div>
      <div class="post-date four columns omega"><%= simple_date post.created_at %></div>
    </div>
  <% end %>
</div> 
