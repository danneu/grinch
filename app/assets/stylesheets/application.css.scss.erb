$blue: #227CE8;
$grey: #C8C8C8;
$yellow: #F9FC7E;
$green: #B5FFC8;

@mixin flash {
  padding-left: 25px;
  background-position: 5px;
}

#flash_error {
  background: url("<%= asset_path('error.png') %>") no-repeat #FF9797;
  @include flash;
}
#flash_alert {
  background: url("<%= asset_path('error.png') %>") no-repeat #FF9797;
  @include flash;
}

#flash_notice {
  background: url("<%= asset_path('success.png') %>") no-repeat $green;
  @include flash;
}

label {display:inline;}

body {
  font-family: Georgia, 'Times New Roman' ,Times;
  font-size: 16px;
}

.post-form { 
  input { width: 100%; }
  textarea { width: 100%; }
}

.container {
  margin-top: 25px;
}

a {
  color: $blue;
  text-decoration: none;
  &:hover { 
    text-decoration: underline; 
    color: $blue;
  }
  &:visited {
    color: $blue;
  }
}
.admin-bar {
  text-align: center;
  background: black;
  color: white;
  a {
    background: $yellow;
    color: #000000;
  }
}

.header {
  margin-bottom: 25px;
  .logo {
    vertical-align: middle;
    background: url('coffee.png') no-repeat 6% 54% $yellow;
    font-size: 20px;
    display: inline;
    padding: 2px 4px 2px 25px;
    a {
      &:hover {
        color: #000;
        text-decoration: none;
      }
      &:visited {
        color: #000;
      }
    }

  }
  .nav {
    display: inline;
    margin: 0;
    .link {
      display: inline;
    }
  }
}

.posts {
  list-style: none;
  .post {
    padding-bottom: 5px;
    border-bottom: 1px solid $grey;
    .post-date {
      text-align: right;
    }
  }
}
